                                        <th rowspan="1" colspan="1">{{ (comment.flags | last).date | date("Y-m-d H:i:s")}}</th>
                                        <th rowspan="1" colspan="1"><a href="{{ path('adminReportedComment', {id: comment.id}) }}"><i class="fa fa-eye"></i></a></th>
