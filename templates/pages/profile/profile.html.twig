{% extends 'layouts/adverts.html.twig' %}

{% block content %}
    <div id="features" class="section wb">
        <div class="container">
            <div class="section-title row">
                <div class="col-md-8 col-md-offset-2">

                    <h1>Mes annonces</h1>

                    <div class="list-group">
                        {% for advert in user.adverts %}
                            <div class="row">
                                <a href="#"
                                   class="list-group-item list-group-item-action flex-column align-items-start mb-5 mt-5">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">{{ advert.title }}</h5>
                                        <small>3 days ago</small>
                                    </div>
                                    <div class="d-flex flex-lg-row w-100 justify-content-between">
                                        {# <div class="col-md-3"> #}
                                        <img class="w-25" src="{{ asset('uploads/'~advert.gallery.photos[0].url) }}"
                                             alt="" class="img-responsive">
                                        {# </div> #}
                                        {# <div class="col-9"> #}
                                        <p class="mb-1">{{ advert.description }}</p>
                                        {# </div> #}
                                    </div>
                                    {# <small>Donec id elit non mi porta.</small> #}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
